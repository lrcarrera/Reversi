<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.radu.reversi">

    <uses-sdk android:minSdkVersion="11" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_reversi"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_reversi"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GameMenu.MenuPrincipalActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameHelp.AyudaActivity" />
        <activity android:name=".GameDevelopment.DesarrolloJuegoActivity" />
        <activity android:name=".GameResult.ResultadosActivity" />
        <activity android:name=".GamePreferences.OpcionesActivity" />
        <activity android:name=".GameRegisters.AccessBDActivity">

        <intent-filter>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>

        </activity>
    </application>

</manifest>