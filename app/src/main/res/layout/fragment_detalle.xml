<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >

    <TextView
        android:id="@+id/TxtDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/title_lay"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="Detalls Partida"
            android:layout_marginLeft="@dimen/margin_left"
            android:visibility="invisible"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/alias_lay"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/alias_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="Alias:"
            android:layout_marginLeft="@dimen/margin_left"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/alias"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignRight="@+id/title"
            android:layout_marginLeft="@dimen/margin_left"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/date_lay"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="Fecha:"
            android:layout_marginLeft="@dimen/margin_left"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/dia_hora"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignRight="@+id/date_title"
            android:layout_marginLeft="@dimen/margin_left"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tamany_lay"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tamany_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="Tamany Graella:"
            android:layout_marginLeft="@dimen/margin_left"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tamany"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignRight="@+id/tamany_title"
            android:layout_marginLeft="@dimen/margin_left"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_lay"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/control_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="Control Temps:"
            android:layout_marginLeft="@dimen/margin_left"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/control_tiempo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignRight="@+id/control_title"
            android:layout_marginLeft="@dimen/margin_left"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/negras_lay"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/negras_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="Fitxes Negres:"
            android:layout_marginLeft="@dimen/margin_left"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/negras"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignRight="@+id/negras_title"
            android:layout_marginLeft="@dimen/margin_left"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/blancas_lay"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/blancas_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="Fitxes Blanques:"
            android:layout_marginLeft="@dimen/margin_left"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/blancas"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignRight="@+id/blancas_title"
            android:layout_marginLeft="@dimen/margin_left"
            />

    </LinearLayout>

    <!-- Solo si control de tiempo -->

    <LinearLayout
        android:id="@+id/empleado_lay"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/empleado_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="Tiempo empleado:"
            android:layout_marginLeft="@dimen/margin_left"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tiempo_empleado"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignRight="@+id/empleado_lay"
            android:layout_marginLeft="@dimen/margin_left"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/resultado_lay"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resultado_title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:text="Resultat:"
                android:layout_marginLeft="@dimen/margin_left"
                android:visibility="invisible"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/result_lay"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/resultado"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />

        </LinearLayout>




    </LinearLayout>
